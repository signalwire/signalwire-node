{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ]
  },
  "types": ["jest", "node"],
  "include": [
    "index.ts"
  ],
  "exclude": [
    "**/__mocks__/**/*"
  ]
}
