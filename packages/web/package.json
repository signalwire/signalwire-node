{
  "name": "@signalwire/web",
  "version": "0.0.1",
  "description": "Client library for connecting to SignalWire.",
  "author": "SignalWire Team <open.source@signalwire.com>",
  "main": "dist/index.min.js",
  "unpkg": "dist/index.min.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean-build": "rm -rf dist/* && npm run build",
    "build": "npm run build-es5 && npm run build-esm",
    "build-es5": "webpack -p",
    "watch-es5": "webpack-dev-server --host 0.0.0.0 --mode development",
    "build-esm": "tsc -p tsconfig.esm.json",
    "watch-esm": "tsc -p tsconfig.esm.json -w",
    "tslint": "tslint -p tsconfig.esm.json",
    "test": "jest --forceExit --detectOpenHandles",
    "test:watch": "npm run test -- --watchAll"
  },
  "keywords": [
    "signalwire",
    "relay",
    "webrtc",
    "sip",
    "freeswitch"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/signalwire/signalwire-node"
  },
  "bugs": {
    "url": "https://github.com/signalwire/signalwire-node/issues"
  },
  "homepage": "https://github.com/signalwire/signalwire-node",
  "license": "MIT",
  "dependencies": {
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.6",
    "@types/uuid": "^3.4.4",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14"
  }
}
