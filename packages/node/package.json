{
  "name": "@signalwire/node",
  "version": "2.3.3",
  "description": "Client library for connecting to SignalWire.",
  "author": "SignalWire Team <open.source@signalwire.com>",
  "main": "dist/node/index.js",
  "module": "dist/node/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean-build": "rm -rf dist/* && npm run build",
    "build": "npm run check_versions && tsc",
    "watch": "tsc -w",
    "tslint": "tslint -p tsconfig.json",
    "test": "jest --forceExit --detectOpenHandles",
    "test:watch": "npm run test -- --watchAll",
    "validate": "npm i && npm run tslint && npm run test && npm run clean-build",
    "check_versions": "node ../../.scripts/check_package_version.js"
  },
  "keywords": [
    "signalwire",
    "laml",
    "relay",
    "webrtc",
    "sip",
    "freeswitch"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/signalwire/signalwire-node"
  },
  "bugs": {
    "url": "https://github.com/signalwire/signalwire-node/issues"
  },
  "homepage": "https://github.com/signalwire/signalwire-node",
  "license": "MIT",
  "dependencies": {
    "@types/twilio": "0.0.10",
    "dotenv": "^8.2.0",
    "faye-websocket": "^0.11.3",
    "loglevel": "^1.6.8",
    "twilio": "3.29.2",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "@types/uuid": "^7.0.2",
    "graphql": "^0.12.0",
    "jest": "^25.3.0",
    "mockttp": "^0.19.3",
    "nock": "^12.0.3",
    "ts-jest": "^25.3.1",
    "ts-loader": "^6.2.2",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  }
}
